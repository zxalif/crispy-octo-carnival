# API Configuration
API_KEY=dev_api_key

# Reddit API
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=rixly/1.0

REDDIT_RATE_LIMIT_DELAY=1.0  # seconds between requests
REDDIT_MAX_REQUESTS_PER_MINUTE=60  # global limit

# Search Limits
REDDIT_MAX_POSTS_PER_SEARCH=100  # max posts per search
REDDIT_MAX_COMMENTS_PER_POST=50

# LLM API Keys (choose one)
GROQ_API_KEY=your_groq_api_key
# OR
OPENAI_API_KEY=your_openai_api_key

# Database (PostgreSQL)
DATABASE_URL=postgresql://rixly:rixly@localhost:5432/rixly
# Or use individual parts:
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=rixly
# DATABASE_USER=rixly
# DATABASE_PASSWORD=rixly

# Application Settings
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
ENVIRONMENT=development

# Scheduler
SCHEDULER_ENABLED=true
SCHEDULER_CHECK_INTERVAL=60
JOB_COOLDOWN_MINUTES=10

